<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DiceActivity">

    <!-- Sol Kenar İstatistik Panel (180° döndürülmüş) -->
    <LinearLayout
        android:id="@+id/leftStatsPanel"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:rotation="180"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Sol Sayaç -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/dice_background"
            android:gravity="center"
            android:text="11:53"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Sol Zar Listesi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Zar satırları - örnek olarak birkaç tane -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/dice_background"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FF0000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="iki zardan bir"
                    android:textColor="#FF0000"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/dice_background"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#FF0000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="iki zardan bir"
                    android:textColor="#FF0000"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/dice_background"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#FF0000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="فایل"
                    android:textColor="#FF0000"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/dice_background"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#FF0000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="dördün beş eli"
                    android:textColor="#FF0000"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/dice_background"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#FF0000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="beş beş beş beş"
                    android:textColor="#FF0000"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/dice_background"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#FF0000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="altı almanı"
                    android:textColor="#FF0000"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Alt butonlar -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FF0000"
            android:gravity="center"
            android:text="tümü gyle"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:background="#FF0000"
            android:gravity="center"
            android:text="zar\nsahla"
            android:textColor="#FFFFFF"
            android:textSize="9sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:background="#0000FF"
            android:gravity="center"
            android:text="kaydet"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

    </LinearLayout>

    <!-- Sol Orta Panel (Zar-Checkbox listesi, 180° döndürülmüş) -->
    <LinearLayout
        android:id="@+id/leftDiceList"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:rotation="180"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/leftStatsPanel"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dice_background"
            android:gravity="center"
            android:text="dörtlü oynadı"
            android:textColor="#FF0000"
            android:textSize="10sp"
            android:rotation="90" />

        <!-- Zar kombinasyonları ile checkbox'lar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 4-4 zar kombinasyonu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dice_background"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:padding="1dp">

                <!-- Mini zarlar -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_4" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_4" />

                </LinearLayout>

                <!-- Checkbox -->
                <CheckBox
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <!-- 2-2 zar kombinasyonu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dice_background"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_2" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_2" />

                </LinearLayout>

                <CheckBox
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Orta Büyük Zarlar -->
    <LinearLayout
        android:id="@+id/centerDiceContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/leftDiceList"
        app:layout_constraintEnd_toStartOf="@id/rightDiceList"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Sol büyük zar (5) -->
        <ImageView
            android:id="@+id/bigDice1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/dice_background"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/dice_5" />

        <!-- Sağ büyük zar (3) -->
        <ImageView
            android:id="@+id/bigDice2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/dice_background"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/dice_3" />

    </LinearLayout>

    <!-- Sağ Orta Panel (Zar-Checkbox listesi) -->
    <LinearLayout
        android:id="@+id/rightDiceList"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintEnd_toStartOf="@id/rightStatsPanel"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dice_background"
            android:gravity="center"
            android:text="zar\nsahla"
            android:textColor="#FF0000"
            android:textSize="10sp" />

        <!-- Zar kombinasyonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 4-4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dice_background"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_4" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_4" />

                </LinearLayout>

                <CheckBox
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <!-- 2-2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dice_background"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_2" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_2" />

                </LinearLayout>

                <CheckBox
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <!-- 3-1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dice_background"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_3" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dice_1" />

                </LinearLayout>

                <CheckBox
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Sağ Kenar İstatistik Panel -->
